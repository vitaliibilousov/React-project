---
import * as CONFIG from "../config";
import { MarkdownHeading } from "astro";

type Props = {
  frontmatter: CONFIG.Frontmatter;
  headings: MarkdownHeading[];
};

const { frontmatter, headings } = Astro.props as Props;
import Navigation from "../components/navbar/navbar.astro";
import Head from "../components/utils/head.astro";
import Footer from "../components/footer.astro";

import "../styles/base.css";
---

<html lang={"en-us"} class="initial h-full">
  <head>
    <title>
      {
        frontmatter?.title
          ? `${frontmatter?.title} @ ${CONFIG.SITE.title}`
          : CONFIG.SITE.title
      }
    </title>
    <Head />
  </head>
  <body
    class="h-full bg-white dark:bg-slate-900 text-slate-800 dark:text-white"
  >
    <main class="h-full flex flex-col lg:items-center">
      <Navigation />
      <div class="p-4 lg:p-8 flex-1">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
  <script>
    import "flowbite";
  </script>
</html>
