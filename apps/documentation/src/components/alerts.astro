---
type AlertType = "info" | "warn" | "important" | "tip";

const { type } = Astro.props as { type: AlertType };

const labels: Record<AlertType, string> = {
  info: "INFO",
  tip: "NOTE",
  warn: "WARNING",
  important: "IMPORTANT",
};

const classes: Record<AlertType, string> = {
  info: "text-blue-700 bg-blue-100 dark:bg-blue-200 dark:text-blue-800",
  tip: "text-slate-700 bg-slate-200 dark:bg-slate-700 dark:text-slate-300",
  warn: "text-yellow-700 bg-yellow-100 dark:bg-yellow-200 dark:text-yellow-800",
  important: "text-red-700 bg-red-100 dark:bg-red-200 dark:text-red-800",
};
---

<div
  class:list={[
    "flex p-4 mb-4 text-sm rounded-lg prose-code:text-inherit prose-strong:text-inherit prose-a:text-inherit w-full",
    classes[type],
  ]}
  role="alert"
>
  <svg
    aria-hidden="true"
    class="flex-shrink-0 inline w-5 h-5 mr-3"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
    ><path
      fill-rule="evenodd"
      d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
      clip-rule="evenodd"></path>
  </svg>
  <span class="sr-only">{labels[type]}</span>
  <div class="min-w-[1px] break-words">
    <span class="font-medium">{labels[type]}</span>
    <slot />
  </div>
</div>
